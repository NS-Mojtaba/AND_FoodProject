<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <SearchView
        android:id="@+id/simpleSearchView"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search Here" />

    <Button
        android:id="@+id/button_signin_signout"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:text="@string/sign_in" />

    <android.support.v7.widget.GridLayout
        android:layout_width="341dp"
        android:layout_height="289dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="21dp">

        <ImageView
            android:id="@+id/image_chicken"
            android:layout_width="113dp"
            android:layout_height="107dp"
            android:clickable="true"
            android:contentDescription="@string/hint_description"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/chicken" />

        <TextView
            android:id="@+id/textView_chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_chicken"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/image_beef"
            android:layout_width="118dp"
            android:layout_height="107dp"
            android:clickable="true"
            android:contentDescription="@string/hint_description"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/beef" />

        <ImageView
            android:id="@+id/image_pork"
            android:layout_width="103dp"
            android:layout_height="107dp"
            android:contentDescription="@string/hint_description"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/pork" />

        <TextView
            android:id="@+id/textView_beef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_beef"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView_pork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_pork"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/image_fish"
            android:layout_width="115dp"
            android:layout_height="104dp"
            android:clickable="true"
            android:contentDescription="@string/hint_description"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/fish" />

        <ImageView
            android:id="@+id/image_dessert"
            android:layout_width="114dp"
            android:layout_height="103dp"
            android:clickable="true"
            android:contentDescription="@string/hint_description"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/dessert" />

        <ImageView
            android:id="@+id/image_vegan"
            android:layout_width="102dp"
            android:layout_height="104dp"
            android:clickable="true"
            android:contentDescription="@string/hint_description"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/vegan" />

        <TextView
            android:id="@+id/textView_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_fish"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView_desert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_desert"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView_vegan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_vegan"
            app:layout_column="2"
            app:layout_row="3" />


    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/button_addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="41dp"
        android:gravity="center_vertical|center"
        android:text="@string/addItem_button" />




</RelativeLayout>